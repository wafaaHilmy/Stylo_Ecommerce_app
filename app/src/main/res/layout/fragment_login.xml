<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
      <variable
          name="loginViewModel"
          type="com.training.ecommerce.ui.login.LoginViewModel" />
  </data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFragment"
    android:scrollbars="none"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_marginTop="112dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_stylo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/auth_welcome_msg"
            style="@style/TitleTextViewStyle"
          />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_msg"
            style="@style/MessageTextViewStyle"

            />
        
        <androidx.appcompat.widget.AppCompatEditText
            android:text="@={loginViewModel.email}"
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="36dp"
            style="@style/EditTextStyle"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/ic_email"
            android:hint="@string/email_et_hint" />



        <androidx.appcompat.widget.AppCompatEditText
            android:text="@={loginViewModel.password}"
            android:id="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            style="@style/EditTextStyle"
            android:drawableStart="@drawable/ic_password"
            android:inputType="textPassword"
            android:hint="@string/password_et_hint"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:id="@+id/sign_in_button"
            android:layout_marginTop="16dp"
            android:text="@string/sign_in"
            style="@style/PrimaryButtonStyle"
           />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="@color/neutral_light" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="@string/or"
                android:textAllCaps="true"
                android:textColor="#78909C" />
        </RelativeLayout>

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/google_login_tv"
    style="@style/LoginButtonStyle"
    android:text="@string/google_signin_btn_msg"
    app:drawableStartCompat="@drawable/ic_google"
  />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/facebook_signin_btn"
            style="@style/LoginButtonStyle"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_facebook"
            android:text="@string/facebook_signin_btn_msg" />

        <TextView
            android:id="@+id/password_forget_tv"
            style="@style/MediumPrimaryTextViewStyle"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/forgot_password_msg" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/MessageTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_a_account_msg" />

            <TextView
                android:id="@+id/register_tv"
                style="@style/MediumPrimaryTextViewStyle"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:text="@string/register"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</layout>